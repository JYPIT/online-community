extends base.pug

block content
    if errorMessage 
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") 동영상 파일
        input(type="file" accept="video/*" id="video" name="video")
        input(name="title" placeholder="제목" type="text" required)
        input(name="content" placeholder="내용" type="text" required)
        input(name="hashtags" placeholder="해시태그 (콤마로 구분)" type="text")
        input(type="submit" value="업로드")